<UserControl x:Class="SupplyApp.View.Dialogs.AlertDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:system="clr-namespace:System;assembly=System.Runtime">
    <Grid>
        <StackPanel Margin="25">
            <TextBlock x:Name="MessageTxt"/>
            <Button Style="{StaticResource MaterialDesignFlatButton}" IsDefault="True"
                    Command="md:DialogHost.CloseDialogCommand" Content="ОК" Margin="0 15 0 0"/>
        </StackPanel>
    </Grid>
</UserControl>
